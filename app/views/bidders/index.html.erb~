<h1>Listing bidders</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone number</th>
  </tr>

<% for bidder in @bidders %>
  <tr>
    <td><%=h bidder.first_name %></td>
    <td><%=h bidder.last_name %></td>
    <td><%=h bidder.email %></td>
    <td><%=h bidder.phone_number %></td>
    <td><%= link_to 'Show', bidder %></td>
    <td><%= link_to 'Edit', edit_bidder_path(bidder) %></td>
    <td><%= link_to 'Destroy', bidder, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bidder', new_bidder_path %>
