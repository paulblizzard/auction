<h1>Close Item</h1>

<% form_for item @item, :url => { :action => "close" } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :disabled => 'disabled' %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :disabled => 'disabled' %>
  </p>
  <p>
    <%= f.label :minimum_bid %><br />
    <%= f.text_field :minimum_bid, :disabled => 'disabled' %>
  </p>
	<p>
    <%= f.label :donor_id %><br />
    <%= f.text_field :donor_id, :disabled => 'disabled' %>
  </p>
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url, :disabled => 'disabled' %>
  </p>
	<p>
	<% fields_for @bid_detail do |g| %>
       <%= g.label :bid_amount %><br />
    	 <%= g.text_field :bid_amount %>
    <% end %>
	</p>
  <p>
    <%= f.submit "Close" %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>
