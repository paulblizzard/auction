class BidDetailsController < ApplicationController
	layout 'global'  
	
	# GET /bid_details
  # GET /bid_details.xml
  def index
    @bid_details = BidDetails.find(:all)

    respond_to do |format|
      format.html # index.html.erb
      format.xml  { render :xml => @bid_details }
    end
  end

  # GET /bid_details/1
  # GET /bid_details/1.xml
  def show
    @bid_details = BidDetails.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.xml  { render :xml => @bid_details }
    end
  end

  # GET /bid_details/new
  # GET /bid_details/new.xml
  def new
    @bid_details = BidDetails.new

    respond_to do |format|
      format.html # new.html.erb
      format.xml  { render :xml => @bid_details }
    end
  end

  # GET /bid_details/1/edit
  def edit
    @bid_details = BidDetails.find(params[:id])
  end

  # POST /bid_details
  # POST /bid_details.xml
  def create
    @bid_details = BidDetails.new(params[:bid_details])
		@bid_details.create_date=Time.now
		@bid_details.modified_date=Time.now
		@bid_details.state='CREATED'

		@bid_details.item = Item.find(@bid_details.item_id)
		@bid_details.item.state='CLOSED'
		@bid_details.item.modified_date=Time.now

    respond_to do |format|
      if @bid_details.save and @bid_details.item.save
        flash[:notice] = 'Bid Details was successfully created.'
        format.html { redirect_to(items_url) }
        format.xml  { render :xml => @bid_details, :status => :created, :location => @bid_details }
      else
        format.html { render :action => "new" }
        format.xml  { render :xml => @bid_details.errors, :status => :unprocessable_entity }
      end
    end
  end

  # PUT /bid_details/1
  # PUT /bid_details/1.xml
  def update
    @bid_details = BidDetails.find(params[:id])

    respond_to do |format|
      if @bid_details.update_attributes(params[:bid_details])
        flash[:notice] = 'BidDetails was successfully updated.'
        format.html { redirect_to(@bid_details) }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @bid_details.errors, :status => :unprocessable_entity }
      end
    end
  end

  # DELETE /bid_details/1
  # DELETE /bid_details/1.xml
  def destroy
    @bid_details = BidDetails.find(params[:id])
    @bid_details.destroy

    respond_to do |format|
      format.html { redirect_to(bid_details_url) }
      format.xml  { head :ok }
    end
  end
end
